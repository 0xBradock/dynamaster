{
  "testEnvironment": "node",
  "roots": ["<rootDir>"],
  "testMatch": ["**/*.{test,spec}.ts"],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "collectCoverageFrom": ["./src/**/*.ts", "!**/node_modules/**"],
  "coverageDirectory": "./coverage",
  "errorOnDeprecated": true,
  "verbose": true
}
